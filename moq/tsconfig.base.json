{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"skipLibCheck": true,

		/* Linting */
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"strict": true,
		"checkJs": true,
		"allowJs": true,
		"declaration": true,
		"outDir": "types"
	}
}
