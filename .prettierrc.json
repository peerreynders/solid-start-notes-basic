{
  "arrowParens": "always",
  "bracketSpacing": true,
  "parser": "typescript",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": true,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      },
      "files": ["*.css","*.scss"],
      "options": {
        "parser": "scss"
      }
    }
  ]
}
